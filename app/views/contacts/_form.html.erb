# app/views/supports/_form.html.erb
<% form_for @contact, :url => { :action => "create" }, :html => { :method => :post } do |f| %>
  <p>
    <%= f.label "Name *" %>
  </p>
  <p>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label "Email *" %>
  </p>
  <p>
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label "Type *" %>
  </p>
  <p>
    <%= f.select :contact_type, options_for_select(["Delegate Information", "Delegate Tickate Sale", "Exhibitor Information", "Client Event Request"]) %>
  </p>
  <p>
    <%= f.label "Event" %>
  </p>
  <p>
    <%= f.collection_select(:event, Event.all, :title, :title) %>
  </p>
  <p>
    <%= f.label "Details *" %>
  </p>
  <p>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit "Submit" %>
  </p>
<% end %>

